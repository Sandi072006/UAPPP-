<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" 
      spacing="20" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.mycompany.penilaian_mahasiswa.PrimaryController"
      style="-fx-padding: 50; -fx-background-color: linear-gradient(to bottom, #3498db, #2c3e50);">
    
    <!-- Header -->
    <Label text="Sistem Manajemen Nilai Akademik" 
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    
    <Label text="Pilih Menu yang Anda Inginkan" 
           style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;"/>
    
    <Separator prefWidth="400" style="-fx-background-color: rgba(255,255,255,0.3);"/>
    
    <!-- Menu Buttons -->
    <VBox spacing="15" alignment="CENTER">
        
        <!-- Button Manage Mahasiswa -->
        <Button text="Kelola Data Mahasiswa" 
                fx:id="manageMahasiswaButton" 
                onAction="#manageMahasiswa"
                prefWidth="350"
                prefHeight="60"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

        <!-- Button Manage Mata Kuliah -->
        <Button text="Kelola Data Mata Kuliah" 
                fx:id="manageMataKuliahButton" 
                onAction="#manageMataKuliah"
                prefWidth="350"
                prefHeight="60"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
        
        <!-- Button Manage Nilai -->
        <Button text="Kelola Nilai Mahasiswa" 
                fx:id="manageNilaiButton" 
                onAction="#manageNilai"
                prefWidth="350"
                prefHeight="60"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
        
    </VBox>
    
    <!-- Footer -->
    <VBox alignment="CENTER" spacing="5">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
        <Label text="Versi 1.0" 
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;"/>
        <Label text="Â© 2024 Sistem Penilaian Mahasiswa" 
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;"/>
    </VBox>
    
</VBox>