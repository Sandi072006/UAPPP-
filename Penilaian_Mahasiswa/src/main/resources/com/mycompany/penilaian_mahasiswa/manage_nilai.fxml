<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.mycompany.penilaian_mahasiswa.ManageNilaiController"
      spacing="20" 
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">
    
    <Label text="Kelola Nilai Mahasiswa" 
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <GridPane hgap="15" vgap="15" style="-fx-padding: 20; -fx-background-color: white;">
        
        <Label text="Pilih Mahasiswa:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="mahasiswaComboBox" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  prefWidth="400"
                  promptText="-- Pilih Mahasiswa --"/>
        
        <Label text="Pilih Mata Kuliah:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="mataKuliahComboBox" 
                  GridPane.columnIndex="1" GridPane.rowIndex="1"
                  prefWidth="400"
                  promptText="-- Pilih Mata Kuliah --"/>
        
        <Label text="Jumlah Quiz:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold;"/>
        <Spinner fx:id="jumlahQuizSpinner" 
                 GridPane.columnIndex="1" GridPane.rowIndex="2"
                 prefWidth="150"
                 editable="true"/>
        
        <Label text="Jumlah Tugas:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold;"/>
        <Spinner fx:id="jumlahTugasSpinner" 
                 GridPane.columnIndex="1" GridPane.rowIndex="3"
                 prefWidth="150"
                 editable="true"/>
        
    </GridPane>
    
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="simpanButton" 
                text="Lanjut ke Input Nilai" 
                onAction="#handleSimpan"
                prefWidth="200"
                prefHeight="40"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button fx:id="batalButton" 
                text="Batal" 
                onAction="#handleBatal"
                prefWidth="150"
                prefHeight="40"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
    
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
        <Label text="Informasi:" style="-fx-font-weight: bold;"/>
        <Label text="• Pilih mahasiswa dan mata kuliah"/>
        <Label text="• Tentukan jumlah quiz dan tugas"/>
        <Label text="• Klik 'Lanjut ke Input Nilai'"/>
    </VBox>
    
</VBox>