<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.mycompany.penilaian_mahasiswa.ManageNilaiController"
      spacing="20" 
      padding="30"
      style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <Label text="Kelola Nilai Mahasiswa" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Separator/>
    
    <!-- Form Section -->
    <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <!-- Pilih Mahasiswa -->
        <Label text="Pilih Mahasiswa:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="mahasiswaComboBox" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  prefWidth="400"
                  promptText="-- Pilih Mahasiswa --"
                  style="-fx-font-size: 13px;"/>
        
        <!-- Pilih Mata Kuliah -->
        <Label text="Pilih Mata Kuliah:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <ComboBox fx:id="mataKuliahComboBox" 
                  GridPane.columnIndex="1" GridPane.rowIndex="1"
                  prefWidth="400"
                  promptText="-- Pilih Mata Kuliah --"
                  style="-fx-font-size: 13px;"/>
        
        <!-- Jumlah Quiz -->
        <Label text="Jumlah Quiz:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="2" spacing="10" alignment="CENTER_LEFT">
            <Spinner fx:id="jumlahQuizSpinner" 
                     prefWidth="150"
                     editable="true"
                     style="-fx-font-size: 13px;"/>
            <Label text="(Jumlah quiz yang akan diinput)" 
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        </HBox>
        
        <!-- Jumlah Tugas -->
        <Label text="Jumlah Tugas:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" spacing="10" alignment="CENTER_LEFT">
            <Spinner fx:id="jumlahTugasSpinner" 
                     prefWidth="150"
                     editable="true"
                     style="-fx-font-size: 13px;"/>
            <Label text="(Jumlah tugas yang akan diinput)" 
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        </HBox>
        
    </GridPane>
    
    <!-- Button Section -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="simpanButton" 
                text="Lanjut ke Input Nilai" 
                onAction="#handleSimpan"
                prefWidth="200"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button fx:id="batalButton" 
                text="Batal" 
                onAction="#handleBatal"
                prefWidth="150"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
    
    <!-- Info Section -->
    <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
        <Label text="ðŸ“Œ Informasi:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <Label text="â€¢ Pilih mahasiswa dan mata kuliah yang akan diinput nilainya" 
               style="-fx-font-size: 12px;"/>
        <Label text="â€¢ Tentukan jumlah quiz dan tugas yang akan diinput" 
               style="-fx-font-size: 12px;"/>
        <Label text="â€¢ Klik 'Lanjut ke Input Nilai' untuk melanjutkan ke halaman input nilai detail" 
               style="-fx-font-size: 12px;"/>
    </VBox>
    
</VBox>