<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.penilaian_mahasiswa.NilaiAkhirController"
      spacing="20" 
      style="-fx-padding: 30; -fx-background-color: #ecf0f1;">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20" 
          style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ“Š Daftar Nilai Akhir Mahasiswa" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Data nilai akhir seluruh mahasiswa" 
                   style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;"/>
        </VBox>
        <Button fx:id="kembaliButton" 
                text="â¬… Kembali" 
                onAction="#handleKembali"
                prefHeight="40"
                prefWidth="120"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>
    
    <!-- Search & Info Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT" 
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ” Pencarian" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
            <TextField fx:id="searchField" 
                      promptText="Cari nama mahasiswa, NPM, atau mata kuliah..."
                      prefWidth="400"
                      style="-fx-font-size: 13px;"/>
        </VBox>
        
        <VBox spacing="5" alignment="CENTER">
            <Label text="ðŸ“‹ Total Data" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="totalDataLabel" text="0" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        </VBox>
        
        <VBox spacing="10">
            <Label text=" "/>
            <Button fx:id="refreshButton" 
                   text="ðŸ”„ Refresh" 
                   onAction="#handleRefresh"
                   prefWidth="120"
                   prefHeight="35"
                   style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </VBox>
    </HBox>
    
    <!-- Table Section -->
    <VBox spacing="15" VBox.vgrow="ALWAYS" 
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="ðŸ“‹ Data Nilai Akhir" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ“„ Lihat Detail" 
                    onAction="#handleDetail"
                    prefHeight="35"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
        
        <Separator/>
        
        <TableView fx:id="nilaiAkhirTable" VBox.vgrow="ALWAYS" 
                   style="-fx-font-size: 13px;">
            <columns>
                <TableColumn fx:id="npmColumn" text="NPM" prefWidth="100" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="namaColumn" text="Nama Mahasiswa" prefWidth="200"/>
                <TableColumn fx:id="matkulColumn" text="Mata Kuliah" prefWidth="250"/>
                <TableColumn fx:id="sksColumn" text="SKS" prefWidth="60" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="nilaiColumn" text="Nilai Akhir" prefWidth="100" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="hurufColumn" text="Huruf" prefWidth="70" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="bobotColumn" text="Bobot" prefWidth="80" 
                            style="-fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="15">
                    <Label text="ðŸ“­" style="-fx-font-size: 48px;"/>
                    <Label text="Belum ada data nilai akhir" 
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Silakan input nilai mahasiswa terlebih dahulu" 
                           style="-fx-text-fill: #bdc3c7; -fx-font-size: 13px;"/>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>
    
    <!-- Footer Info -->
    <HBox alignment="CENTER" 
          style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 10;">
        <Label text="ðŸ’¡ Tips: Gunakan kotak pencarian untuk filter data | Klik baris dan tekan 'Lihat Detail' untuk info lengkap" 
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
    </HBox>
    
</VBox>