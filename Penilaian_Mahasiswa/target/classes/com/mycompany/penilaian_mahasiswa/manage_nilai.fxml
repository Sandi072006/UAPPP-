<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.penilaian_mahasiswa.ManageNilaiController"
      spacing="20.0" 
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <VBox spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 20;">
        <Label text="Kelola Nilai Mahasiswa" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label text="Pilih mahasiswa dan mata kuliah untuk input nilai" 
               style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;"/>
    </VBox>
    
    <!-- Form Content -->
    <VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 25;">
        
        <GridPane hgap="15.0" vgap="20.0">
            
            <!-- Pilih Mahasiswa -->
            <Label text="Pilih Mahasiswa:" 
                   GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="mahasiswaComboBox" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0"
                      prefWidth="400.0"
                      promptText="-- Pilih Mahasiswa --"
                      style="-fx-font-size: 13px;"/>
            
            <!-- Pilih Mata Kuliah -->
            <Label text="Pilih Mata Kuliah:" 
                   GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="mataKuliahComboBox" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                      prefWidth="400.0"
                      promptText="-- Pilih Mata Kuliah --"
                      style="-fx-font-size: 13px;"/>
            
            <!-- Jumlah Quiz -->
            <Label text="Jumlah Quiz:" 
                   GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Spinner fx:id="jumlahQuizSpinner" 
                     GridPane.columnIndex="1" GridPane.rowIndex="2"
                     prefWidth="150.0"
                     editable="true"
                     style="-fx-font-size: 13px;"/>
            
            <!-- Jumlah Tugas -->
            <Label text="Jumlah Tugas:" 
                   GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Spinner fx:id="jumlahTugasSpinner" 
                     GridPane.columnIndex="1" GridPane.rowIndex="3"
                     prefWidth="150.0"
                     editable="true"
                     style="-fx-font-size: 13px;"/>
            
        </GridPane>
    </VBox>
    
    <!-- Button Section -->
    <HBox spacing="15.0" alignment="CENTER">
        <padding>
            <Insets top="10.0"/>
        </padding>
        <Button fx:id="simpanButton" 
                text="ðŸ“ Lanjut ke Input Nilai" 
                onAction="#handleSimpan"
                prefWidth="250.0"
                prefHeight="45.0"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
        <Button fx:id="batalButton" 
                text="âŒ Batal" 
                onAction="#handleBatal"
                prefWidth="150.0"
                prefHeight="45.0"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
    </HBox>
    
    <!-- Info Footer -->
    <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
        <Label text="â„¹ï¸ Informasi:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Label text="â€¢ Pilih mahasiswa dan mata kuliah terlebih dahulu" style="-fx-font-size: 12px;"/>
        <Label text="â€¢ Tentukan jumlah quiz dan tugas yang akan diinput" style="-fx-font-size: 12px;"/>
        <Label text="â€¢ Klik 'Lanjut ke Input Nilai' untuk melanjutkan" style="-fx-font-size: 12px;"/>
    </VBox>
    
</VBox>