<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.mycompany.penilaian_mahasiswa.SecondaryController" 
      spacing="20" 
      padding="30"
      style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="ðŸ‘¥ Kelola Data Mahasiswa" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="kembaliButton" 
                text="â¬… Kembali" 
                onAction="#kembaliKeMenu"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Form Input Mahasiswa -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="ðŸ“ Form Input Data Mahasiswa" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        
        <GridPane hgap="15" vgap="12">
            <!-- NPM -->
            <Label text="NPM:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="npmField" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="Contoh: 2110512001"
                       prefWidth="300"/>
            
            <!-- Nama -->
            <Label text="Nama Lengkap:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="namaField" 
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       promptText="Contoh: Ahmad Hidayat"
                       prefWidth="300"/>
            
            <!-- Jurusan -->
            <Label text="Jurusan:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="jurusanField" 
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       promptText="Contoh: Teknik Informatika"
                       prefWidth="300"/>
            
            <!-- Angkatan -->
            <Label text="Angkatan:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="angkatanField" 
                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                       promptText="Contoh: 2021"
                       prefWidth="300"/>
            
            <!-- Program Studi -->
            <Label text="Program Studi:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                   style="-fx-font-weight: bold;"/>
            <TextField fx:id="prodiField" 
                       GridPane.columnIndex="1" GridPane.rowIndex="4"
                       promptText="Contoh: S1 Informatika"
                       prefWidth="300"/>
        </GridPane>
        
        <!-- Button Tambah -->
        <HBox alignment="CENTER" spacing="10" padding="10, 0, 0, 0">
            <Button text="âž• Tambah Mahasiswa" 
                    onAction="#saveMahasiswa"
                    prefWidth="200"
                    prefHeight="40"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>
    
    <!-- Tabel Data Mahasiswa -->
    <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="ðŸ“Š Daftar Mahasiswa" 
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        
        <TableView fx:id="mahasiswaTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="npmColumn" text="NPM" prefWidth="120" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="namaColumn" text="Nama Lengkap" prefWidth="200"/>
                <TableColumn fx:id="jurusanColumn" text="Jurusan" prefWidth="180"/>
                <TableColumn fx:id="angkatanColumn" text="Angkatan" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="prodiColumn" text="Program Studi" prefWidth="150"/>
            </columns>
            <placeholder>
                <Label text="Belum ada data mahasiswa" style="-fx-text-fill: #95a5a6;"/>
            </placeholder>
        </TableView>
    </VBox>
    
    <!-- Info Footer -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
        <Label text="ðŸ’¡ Tips: Isi semua field untuk menambah data mahasiswa baru" 
               style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
    </HBox>
    
</VBox>